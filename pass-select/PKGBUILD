pkgname='pass-select'
pkgver=1
pkgrel=1
pkgdesc='Selects password file via fzf'
arch=('any')
license=('GPL2')
depends=('pass' 'fzf')
source=("select.bash")
sha256sums=('afe22356d82364de80418467b154821d0fe4c399ae9c6bf3f21d4f1773cb4298')

package() {
  cd "${srcdir}"
  install -Dm0755 -t "${pkgdir}/usr/lib/password-store/extensions" select.bash
}
