pkgname='pass-select'
pkgver=1
pkgrel=1
pkgdesc='Selects password file via fzf'
arch=('any')
license=('GPL2')
depends=('pass' 'fzf')
source=("select.bash")
sha256sums=('af49f76a5085ed9b979f42717b00cc9f06779ceac2282000975404fafc944ddf')

package() {
  cd "${srcdir}"
  install -Dm0755 -t "${pkgdir}/usr/lib/password-store/extensions" select.bash
}
